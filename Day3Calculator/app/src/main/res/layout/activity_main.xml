<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.w3epic.day3calculator.MainActivity"
    android:orientation="vertical"
    android:layout_margin="24dp"
    android:padding="24dp"
    android:background="@android:drawable/picture_frame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:textSize="32sp"
            android:fontFamily="cursive"
            android:text="Calculator V1.0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tvScreen"
            android:textSize="48sp"
            android:background="@android:drawable/editbox_background_normal"
            android:fontFamily="monospace"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:id="@+id/btnSeven"
            android:text="7"
            android:textSize="24dp"
            android:layout_margin="5dp"
            android:onClick="btnSevenOnClickHandler"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:id="@+id/btnEight"
            android:text="8"
            android:textSize="24dp"
            android:layout_margin="5dp"
            android:onClick="btnEightOnClickHandler"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:id="@+id/btnNine"
            android:text="9"
            android:textSize="24dp"
            android:layout_margin="5dp"
            android:onClick="btnNineOnClickHandler"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:id="@+id/btnDiv"
            android:text="/"
            android:textSize="24dp"
            android:layout_margin="5dp"
            android:onClick="btnDivOnClickHandler"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:id="@+id/btnFour"
            android:text="4"
            android:textSize="24dp"
            android:layout_margin="5dp"
            android:onClick="btnFourOnClickHandler"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:id="@+id/btnFive"
            android:text="5"
            android:textSize="24dp"
            android:layout_margin="5dp"
            android:onClick="btnFiveOnClickHandler"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:id="@+id/btnSix"
            android:text="6"
            android:textSize="24dp"
            android:layout_margin="5dp"
            android:onClick="btnSixOnClickHandler"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:id="@+id/btnMul"
            android:text="*"
            android:textSize="24dp"
            android:layout_margin="5dp"
            android:onClick="btnMulOnClickHandler"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:id="@+id/btnOne"
            android:text="1"
            android:textSize="24dp"
            android:layout_margin="5dp"
            android:onClick="btnOneOnClickHandler"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:id="@+id/btnTwo"
            android:text="2"
            android:textSize="24dp"
            android:layout_margin="5dp"
            android:onClick="btnTwoOnClickHandler"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:id="@+id/btnThree"
            android:text="3"
            android:textSize="24dp"
            android:layout_margin="5dp"
            android:onClick="btnThreeOnClickHandler"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:id="@+id/btnSub"
            android:text="-"
            android:textSize="24dp"
            android:layout_margin="5dp"
            android:onClick="btnSubOnClickHandler"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="2"
            android:id="@+id/btnZero"
            android:text="0"
            android:textSize="24dp"
            android:layout_margin="5dp"
            android:onClick="btnZeroOnClickHandler"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:id="@+id/btnPoint"
            android:text="."
            android:textSize="24dp"
            android:layout_margin="5dp"
            android:onClick="btnPointOnClickHandler"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:id="@+id/btnAdd"
            android:text="+"
            android:textSize="24dp"
            android:layout_margin="5dp"
            android:onClick="btnAddOnClickHandler"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:id="@+id/btnClear"
            android:text="CLR"
            android:textSize="24dp"
            android:layout_margin="5dp"
            android:onClick="btnClearOnClickHandler"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:id="@+id/btnBackspace"
            android:text="del"
            android:textSize="24dp"
            android:layout_margin="5dp"
            android:onClick="btnBackspaceOnClickHandler"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="2"
            android:id="@+id/btnEqual"
            android:text="="
            android:textSize="24dp"
            android:layout_margin="5dp"
            android:onClick="btnEqualOnClickHandler"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Developed by Arpan Das"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="(C) 2018 w3epic.com"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>
